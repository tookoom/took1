@{
    ViewBag.Title = "Destaques";
    Layout = "~/Areas/Bizz/Views/Shared/_LayoutBizz.cshtml";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Pesquisa Rápida. </h1><h2>Encontre seu imóvel aqui:</h2>
            </hgroup>
            <nav>
                <select id="adTypeSelect">
                    @foreach (var item in ViewBag.AdType)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <select id="citySelect">
                    <option value="*">Selecione Cidade</option>
                </select>
                <select id="propertyTypeSelect">
                    <option value="*">Todos os Imóveis</option>
                </select>
                <select id="districtSelect">
                    <option value="*">Todos os Bairros</option>
                </select>
                <div class="float-right">
                    <input type="button" name="name" value="Pesquisar"  style="width:180px;"/>
                </div>
            </nav>
        </div>
    </section>
}

<h2>Destaques Venda</h2>
    @foreach (var ad in ViewBag.SellFeaturedAds)
    {
        var value = string.Format("{0:C}", ad.Value);

        <div class="float-left featuredAd">
                <h1>@ad.PropertyType</h1>
                <img  src="@ad.MainPicUrl" />
                Bairro @ad.Location.District.Name<br />
                @ad.TotalRooms @ad.PropertyTypeRoomName
                <br />
                <p><b>@value</b></p>
                <a class="brokerButton" href="~/Bizz/Broker/Imovel/@ad.CustomerCode/Venda/@ad.AdCode">
                    @*<div class="brokerButton">Detalhes</div>*@
                    Detalhes

                </a>                
        </div>
    }
<br class="clear" />
<h2>Destaques Aluguel</h2>
    @foreach (var ad in ViewBag.RentFeaturedAds)
    {
        var value = string.Format("{0:C}", ad.Value);

        <div class="float-left featuredAd">
                <h1>@ad.PropertyType</h1>
                <img  src="@ad.MainPicUrl" />
                Bairro @ad.Location.District.Name<br />
                @ad.TotalRooms @ad.PropertyTypeRoomName
                <br />
                <p><b>@value</b></p>
                <a class="brokerButton" href="~/Bizz/Broker/Imovel/@ad.CustomerCode/Venda/@ad.AdCode">
                    @*<div class="brokerButton">Detalhes</div>*@
                    Detalhes

                </a>                
        </div>
    }

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            initializeSelects('@ViewBag.CustomerCode');
        });
    </script>
}
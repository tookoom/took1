<UserControl x:Class="Took1.Silverlight.LifeManager.App.Styles.AppleStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:menu="clr-namespace:DevExpress.AgMenu;assembly=DevExpress.AgMenu.v8.2"
    xmlns:menuInternal="clr-namespace:DevExpress.AgMenu.Internal;assembly=DevExpress.AgMenu.v8.2"
    xmlns:local="clr-namespace:Took1.Silverlight.LifeManager.App.Styles;assembly=Took1.Silverlight.LifeManager.App"
    Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ControlTemplate x:Key="AppleStyleMenuItemTemplate" TargetType="Smenu:AgMenuItem">
            <Grid x:Name="ElementRoot">
                <Grid.Resources>
                    <Color x:Key="DisabledTextColor">LightGray</Color>
                    <Storyboard x:Key="StoryboardStateHot">
                    </Storyboard>
                    <Storyboard x:Key="StoryboardStateDroppedDown"/>
                    <Storyboard x:Key="StoryboardStateDroppedDownSelected">
                    </Storyboard>
                    <Storyboard x:Key="StoryboardStateDisabled">
                        <ColorAnimation Duration="0:0:0" Storyboard.TargetName="ForegroundBrush" Storyboard.TargetProperty="Color" To="{StaticResource DisabledTextColor}"/>
                    </Storyboard>
                    <ResourceDictionary x:Key="MenuItemContentPresenterTemplateCollection">
                        <ControlTemplate x:Key="TemplateMenuItemContentPresenter" TargetType="menuInternal:AgMenuItemContentPresenter">
                            <Grid x:Name="ElementRoot">
                                <StackPanel Orientation="Vertical">
                                    <Grid x:Name="ElementIconArea">
                                        <ContentPresenter x:Name="ElementIcon"
                                                  Content="{TemplateBinding Icon}"
                                                  />
                                    </Grid>
                                    <ContentPresenter
                                          Content="{TemplateBinding Header}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                                        Margin="0,0,0,3"
                                          RenderTransformOrigin="0.5 0.5"
                                          VerticalAlignment="Center">
                                        <ContentPresenter.RenderTransform>
                                            <ScaleTransform ScaleY="-1"/>
                                        </ContentPresenter.RenderTransform>

                                        <ContentPresenter.OpacityMask>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#00FFFFFF" Offset="0.25"/>
                                                <GradientStop Color="#4D000000" Offset="1"/>
                                            </LinearGradientBrush>
                                        </ContentPresenter.OpacityMask>
                                    </ContentPresenter>

                                </StackPanel>
                                <ContentPresenter x:Name="ElementContent"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Grid.Column="0"
                                  Grid.Row="0"/>
                            </Grid>
                        </ControlTemplate>
                        <ControlTemplate x:Key="TemplatePopupMenuItemContentPresenter" TargetType="menuInternal:AgMenuItemContentPresenter">
                            <Grid x:Name="ElementRoot">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <ContentPresenter
                                  Content="{TemplateBinding Header}"
                                  ContentTemplate="{TemplateBinding HeaderTemplate}"
                                  Grid.Column="0"
                                  Grid.Row="0"
                                  VerticalAlignment="Center"/>
                                <ContentPresenter x:Name="ElementContent"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Grid.Column="0"
                                  Grid.Row="0"/>
                                <Grid x:Name="ElementIconCheckAreaContainer" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
                                    <Grid x:Name="ElementIconCheckArea">
                                        <Grid MinWidth="17">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid x:Name="ElementIconAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid x:Name="ElementIconArea">
                                                    <ContentPresenter x:Name="ElementIcon"
                                                      Content="{TemplateBinding Icon}"/>
                                                </Grid>
                                            </Grid>
                                            <Grid x:Name="ElementCheckAreaContainer" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid x:Name="ElementCheckArea" MinWidth="15">
                                                    <Path x:Name="ElementCheck"
                                                      Fill="{TemplateBinding Foreground}"
                                                      Height="7"
                                                      Stretch="Uniform"
                                                      Stroke="{TemplateBinding Foreground}"
                                                      StrokeThickness="1"
                                                      Width="7">
                                                        <Path.Data>
                                                            <PathGeometry>
                                                                <PathGeometry.Figures>
                                                                    <PathFigure StartPoint="0,2" IsClosed="True">
                                                                        <PathFigure.Segments>
                                                                            <PolyLineSegment Points="2,4 6,0 6,2 2,6 0,4"/>
                                                                        </PathFigure.Segments>
                                                                    </PathFigure>
                                                                </PathGeometry.Figures>
                                                            </PathGeometry>
                                                        </Path.Data>
                                                    </Path>
                                                    <Ellipse x:Name="ElementRadio"
                                                      Fill="{TemplateBinding Foreground}"
                                                      Height="6"
                                                      Width="6"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ControlTemplate>
                        <ControlTemplate x:Key="TemplatePopupMenuSubItemContentPresenter" TargetType="menuInternal:AgMenuItemContentPresenter">
                            <Grid x:Name="ElementRoot">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid x:Name="ElementIconCheckAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid x:Name="ElementIconCheckArea" Grid.Column="0" Grid.Row="0">
                                        <Grid x:Name="ElementIconAreaContainer">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid x:Name="ElementIconArea" Grid.Column="0" Grid.Row="0" MinWidth="17">
                                                <ContentPresenter x:Name="ElementIcon"
                                                  Content="{TemplateBinding Icon}"/>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <ContentPresenter
                                  Content="{TemplateBinding Header}"
                                  ContentTemplate="{TemplateBinding HeaderTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"
                                  VerticalAlignment="Center"/>
                                <Polygon
                                  Fill="{TemplateBinding Foreground}"
                                  Grid.Column="2"
                                  Grid.Row="0"
                                  HorizontalAlignment="Right"
                                  Points="0,0 4,4 0,8"
                                  VerticalAlignment="Center"/>
                                <ContentPresenter x:Name="ElementContent"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"/>
                            </Grid>
                        </ControlTemplate>
                    </ResourceDictionary>
                </Grid.Resources>

                <menuInternal:AgMenuItemContentPresenter x:Name="ElementContentPresenter"
                  CheckAreaVisibility="{TemplateBinding CheckAreaVisibility}"
                  Content="{TemplateBinding Content}"
                  ContentTemplate="{TemplateBinding ContentTemplate}"
                  Header="{TemplateBinding Header}"
                  HeaderTemplate="{TemplateBinding HeaderTemplate}"
                  Icon="{TemplateBinding Icon}"
                  IsRadioItem="{TemplateBinding IsRadioItem}"
                  TemplateCollection="{StaticResource MenuItemContentPresenterTemplateCollection}"
                                                 Margin="5,0,5,0"
                  ViewStyle="{TemplateBinding ViewStyle}">
                   
                    <menuInternal:AgMenuItemContentPresenter.Foreground>
                        <SolidColorBrush x:Name="ForegroundBrush" Color="White"/>
                    </menuInternal:AgMenuItemContentPresenter.Foreground>
                </menuInternal:AgMenuItemContentPresenter>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="AppleStyleMenuSeparatorTemplate" TargetType="menu:AgMenuSeparator">
            <Grid x:Name="ElementRoot">
                <Grid.Resources>
                    <!-- Do not delete DisabledTextColor -->
                    <Color x:Key="DisabledTextColor"/>
                    <ResourceDictionary x:Key="MenuItemContentPresenterTemplateCollection">
                        <ControlTemplate x:Key="TemplateMenuItemContentPresenter" TargetType="menuInternal:AgMenuItemContentPresenter">
                            <Grid>
                                <Rectangle Width="5" Fill="White" Opacity="0.7" Height="32" VerticalAlignment="Bottom">
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <SkewTransform AngleX="-10"/>
                                            <TranslateTransform Y="-23"/>
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                        </ControlTemplate>
                    </ResourceDictionary>
                </Grid.Resources>
                <menuInternal:AgMenuItemContentPresenter x:Name="ElementContentPresenter"
                  TemplateCollection="{StaticResource MenuItemContentPresenterTemplateCollection}"
                  ViewStyle="{TemplateBinding ViewStyle}">
                </menuInternal:AgMenuItemContentPresenter>
            </Grid>
        </ControlTemplate>
        <Style x:Key="AppleStyleMenuStyle" TargetType="menu:AgMenu">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid Visibility="Visible">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

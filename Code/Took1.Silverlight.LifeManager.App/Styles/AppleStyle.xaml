                                <Rectangle.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleY="0.75"/>
                                        <SkewTransform AngleX="-10"/>
                                    </TransformGroup>
                                </Rectangle.RenderTransform>
                            </Rectangle>-->
                            <Grid VerticalAlignment="Bottom" Height="50" RenderTransformOrigin="0.5 1">
                                <Grid.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleY="0.6"/>
                                        <SkewTransform AngleX="-15"/>
                                        <TranslateTransform Y="-10"/>
                                    </TransformGroup>
                                </Grid.RenderTransform>
                                <Path x:Name="Path" Stretch="Fill" Fill="#FF999B9E" Data="F1 M 57,-36C 34.333,-29.333 25,-38.667 25,-38.667L 25,-28L 90.333,-28L 90.333,-33.333C 90.333,-33.333 80.667,-42.667 57,-36 Z "/>
                                <Path x:Name="Path_1" Stretch="Fill" Fill="#FF898B8E" Data="F1 M 25,-44L 25,-38.667C 25,-38.667 34.333,-29.333 57,-36C 80.667,-42.667 90.333,-33.333 90.333,-33.333L 90.333,-44L 25,-44 Z ">
                                    <Path.RenderTransform>
                                        <TranslateTransform Y="-23"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Grid>
                            <ItemsPresenter RenderTransformOrigin="0.5 0.5" SizeChanged="ItemsPresenter_SizeChanged">
                            </ItemsPresenter>
                            
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <local:AgApplePanel Orientation="Horizontal" Background="Transparent" VerticalAlignment="Bottom" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <!--<Setter Property="ItemContainerStyles">
                <Setter.Value>

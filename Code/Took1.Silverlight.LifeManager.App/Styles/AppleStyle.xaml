                                    </Style>
                                </menu:AgMenuItemContainerStyles>
                            </Setter.Value>
                        </Setter>-->
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>



        <DataTemplate x:Name="OptionsPanelTemplate">
            <StackPanel x:Name="OptionsPanel" Orientation="Vertical" Loaded="OptionsPanel_Loaded" Height="60">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Scale:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <Slider x:Name="scale" Width="200" ValueChanged="scale_ValueChanged" Minimum="0.3" Maximum="1.5" Value="1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Magnification:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <Slider x:Name="mag" Width="200" ValueChanged="scale_ValueChanged" Minimum="10" Maximum="130" Value="80"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="MagWidth:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <Slider x:Name="magWidth" Width="200" ValueChanged="scale_ValueChanged" Minimum="70" Maximum="500" Value="250"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>


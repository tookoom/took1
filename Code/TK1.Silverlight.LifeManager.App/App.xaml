<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="Took1.Silverlight.LifeManager.App.App"
             xmlns:DevExpress_AgMenu="clr-namespace:DevExpress.AgMenu;assembly=DevExpress.AgMenu.v8.2"
             xmlns:DevExpress_AgMenu_DefaultStyle="clr-namespace:DevExpress.AgMenu.DefaultStyle;assembly=DevExpress.AgMenu.v8.2"
             xmlns:DevExpress_AgMenu_Internal="clr-namespace:DevExpress.AgMenu.Internal;assembly=DevExpress.AgMenu.v8.2"
             xmlns:Took1_Silverlight_LifeManager_App_Styles="clr-namespace:Took1.Silverlight.LifeManager.App.Styles"
             xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
             >
    <Application.Resources>
        <!-- ################################################### LIFE MANAGER ########################################################-->
        <ControlTemplate x:Key="AgMenuItemHorizontalContentPresenterTemplate" TargetType="DevExpress_AgMenu_Internal:AgMenuItemContentPresenter">
            <Grid x:Name="ElementRoot" Margin="{TemplateBinding Padding}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid x:Name="ElementIconCheckAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                    <Grid x:Name="ElementIconCheckArea">
                        <Grid x:Name="ElementIconAreaContainer">
                            <Grid x:Name="ElementIconArea">
                                <ContentControl x:Name="ElementIcon"
                                                  Content="{TemplateBinding Icon}"
                                                  Margin="0,1,4,1"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <ContentControl
                                  Content="{TemplateBinding Header}"
                                  ContentTemplate="{TemplateBinding HeaderTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"
                                  VerticalAlignment="Center"/>
                <ContentControl x:Name="ElementContent"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="AgMenuItemVerticalContentPresenterTemplate" TargetType="DevExpress_AgMenu_Internal:AgMenuItemContentPresenter">
            <Grid x:Name="ElementRoot" Margin="{TemplateBinding Padding}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Rectangle x:Name="ElementRadio" Grid.ColumnSpan="2" Fill="YellowGreen" Stroke="Gray" StrokeThickness="1" RadiusX="2" RadiusY="2"/>
                <Rectangle x:Name="ElementCheck" Grid.ColumnSpan="2" Fill="YellowGreen" Stroke="Gray" StrokeThickness="1" RadiusX="2" RadiusY="2"/>
                <Grid x:Name="ElementIconCheckAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                    <Grid x:Name="ElementIconCheckArea">
                        <Grid x:Name="ElementIconAreaContainer">
                            <Grid x:Name="ElementIconArea">
                                <ContentControl x:Name="ElementIcon"
                                                  Content="{TemplateBinding Icon}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <ContentControl
                                  Content="{TemplateBinding Header}"
                                  ContentTemplate="{TemplateBinding HeaderTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"
                                  VerticalAlignment="Center"/>
                <ContentControl x:Name="ElementContent"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="AgMenuItemVerticalPopupMenuItemContentPresenterTemplate" TargetType="DevExpress_AgMenu_Internal:AgMenuItemContentPresenter">
            <Grid x:Name="ElementRoot">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid x:Name="ElementIconCheckAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                    <Grid x:Name="ElementIconCheckArea">
                        <Grid MinWidth="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid x:Name="ElementCheckAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                                <Grid x:Name="ElementCheckArea" MinWidth="9" Margin="0,0,5,0">
                                    <Path x:Name="ElementCheck"
                                                      Stretch="Fill" Margin="0,0,0,1" Fill="#FF000000" Data="F1 M 398,289L 397,288L 392,293L 390,291L 389,292L 392,295L 398,289 Z " Height="7" Width="9"/>
                                    <Ellipse x:Name="ElementRadio" Height="7" Margin="0,0,0,1" Width="7" Fill="#FFFFFFFF" Stroke="#FF000000" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                            <Grid x:Name="ElementIconAreaContainer" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid x:Name="ElementIconArea">
                                    <ContentControl x:Name="ElementIcon"
                                                      Content="{TemplateBinding Icon}"
                                                      Foreground="{TemplateBinding Foreground}"
                                                      Margin="0,1,5,1"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <ContentControl
                                  Content="{TemplateBinding Header}"
                                  ContentTemplate="{TemplateBinding HeaderTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"
                                  VerticalAlignment="Center"/>
                <ContentControl x:Name="ElementContent"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="AgMenuItemVerticalPopupMenuSubItemContentPresenterTemplate" TargetType="DevExpress_AgMenu_Internal:AgMenuItemContentPresenter">
            <Grid x:Name="ElementRoot">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid x:Name="ElementIconCheckAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                    <Grid x:Name="ElementIconCheckArea">
                        <Grid MinWidth="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid x:Name="ElementCheckAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid x:Name="ElementCheckArea" MinWidth="9" Margin="0,0,5,0">
                                    <Path x:Name="ElementCheck"
                                                      Stretch="Fill" Margin="0,0,0,1" Fill="#FF000000" Data="F1 M 398,289L 397,288L 392,293L 390,291L 389,292L 392,295L 398,289 Z " Height="7" Width="9"/>
                                    <Ellipse x:Name="ElementRadio" Height="7" Margin="0,0,0,1" Width="7" Fill="#FFFFFFFF" Stroke="#FF000000" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                            <Grid x:Name="ElementIconAreaContainer" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid x:Name="ElementIconArea">
                                    <ContentControl x:Name="ElementIcon"
                                                      Content="{TemplateBinding Icon}"
                                                      Foreground="{TemplateBinding Foreground}"
                                                      Margin="0,1,5,1"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <ContentControl
                                  Content="{TemplateBinding Header}"
                                  ContentTemplate="{TemplateBinding HeaderTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"
                                  VerticalAlignment="Center"/>
                <ContentControl x:Name="ElementContent"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Grid.Column="1"
                                  Grid.Row="0"/>
            </Grid>
        </ControlTemplate>

        <DevExpress_AgMenu:AgMenuTemplateList x:Key="ItemContainerTemplates">
            <DevExpress_AgMenu:AgMenuTemplateListItem Key="AgMenuItem;Horizontal">
                <DevExpress_AgMenu:AgMenuTemplateListItem.Template>
                    <ControlTemplate TargetType="DevExpress_AgMenu:AgMenuItem">
                        <Grid x:Name="ElementRoot">
                            <vsm:VisualStateManager.VisualStateGroups>
                                <vsm:VisualStateGroup x:Name="CommonStates">
                                    <vsm:VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#00DEDEDE"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#00F1F1F1"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="Hot">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#50C6C6C6"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#50E5E5E5"/>
                                            <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementLeftBorder" Storyboard.TargetProperty="Opacity" To="0"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="DroppedDown">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="White"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="White"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="DroppedDownSelected">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="White"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="White"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementContentPresenter" Storyboard.TargetProperty="Opacity" To=".4"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#FFB7B7B7"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#FFD3D3D3"/>
                                            <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementLeftBorder" Storyboard.TargetProperty="Opacity" To="0"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                </vsm:VisualStateGroup>
                            </vsm:VisualStateManager.VisualStateGroups>
                            <Border HorizontalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="1" CornerRadius="0,0,0,0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop x:Name="ElementBackgroundGradient1" Color="#FFDEDEDE"/>
                                        <GradientStop x:Name="ElementBackgroundGradient2" Color="#FFF1F1F1" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!--DevExpress_AgMenu_DefaultStyle:AgHorizontalMenuItemDefaultStyleHelper Position="{TemplateBinding Position}"/-->
                                    <Border x:Name="ElementLeftBorder" Width="1" VerticalAlignment="Stretch" Grid.Column="0">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#19FDFDFD"/>
                                                <GradientStop Color="#19FDFDFD" Offset="1"/>
                                                <GradientStop Color="#FFFDFDFD" Offset="0.5"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <DevExpress_AgMenu_Internal:AgMenuItemContentPresenter x:Name="ElementContentPresenter" Grid.Column="1"
							  Foreground="{TemplateBinding Foreground}"
							  CheckAreaVisibility="{TemplateBinding CheckAreaVisibility}"
							  Header="{TemplateBinding Header}"
							  HeaderTemplate="{TemplateBinding HeaderTemplate}"
							  Icon="{TemplateBinding Icon}"
							  IsRadioItem="{TemplateBinding IsRadioItem}"
							  MenuOrientation="{TemplateBinding MenuOrientation}"
							  Padding="24,5,24,5"
							  Template="{StaticResource AgMenuItemHorizontalContentPresenterTemplate}"
							  VerticalAlignment="Center"
							  ViewStyle="{TemplateBinding ViewStyle}"
							  Position="{TemplateBinding Position}"/>
                                    <Border Width="1" VerticalAlignment="Stretch" Grid.Column="2" HorizontalAlignment="Right">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                <GradientStop Color="#FF6E6E6E"/>
                                                <GradientStop Color="#FFC1C1C1" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </DevExpress_AgMenu:AgMenuTemplateListItem.Template>
            </DevExpress_AgMenu:AgMenuTemplateListItem>
            <DevExpress_AgMenu:AgMenuTemplateListItem Key="AgMenuItem;Vertical">
                <DevExpress_AgMenu:AgMenuTemplateListItem.Template>
                    <ControlTemplate TargetType="DevExpress_AgMenu:AgMenuItem">
                        <Grid x:Name="ElementRoot">
                            <vsm:VisualStateManager.VisualStateGroups>
                                <vsm:VisualStateGroup x:Name="CommonStates">
                                    <vsm:VisualState x:Name="Normal" />
                                    <vsm:VisualState x:Name="Hot">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#00DEDEDE"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#00DEDEDE"/>
                                            <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementTopBorder" Storyboard.TargetProperty="Opacity" To="0"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="DroppedDown">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="White"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="White"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementArrowBrush" Storyboard.TargetProperty="Color" To="#FF222222"/>
                                            <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementTopBorder" Storyboard.TargetProperty="Opacity" To="0"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="DroppedDownSelected">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="White"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="White"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementArrowBrush" Storyboard.TargetProperty="Color" To="#FF222222"/>
                                            <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementTopBorder" Storyboard.TargetProperty="Opacity" To="0"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementContentPresenter" Storyboard.TargetProperty="Opacity" To=".4"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#FFD2D2D2"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#FFD2D2D2"/>
                                            <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementTopBorder" Storyboard.TargetProperty="Opacity" To="0"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                </vsm:VisualStateGroup>
                            </vsm:VisualStateManager.VisualStateGroups>
                            <Border HorizontalAlignment="Stretch" Grid.ColumnSpan="1" CornerRadius="0,0,0,0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop x:Name="ElementBackgroundGradient1" Color="#FFECECEC"/>
                                        <GradientStop x:Name="ElementBackgroundGradient2" Color="#FFECECEC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <DevExpress_AgMenu_DefaultStyle:AgVerticalMenuItemDefaultStyleHelper Position="{TemplateBinding Position}"/>
                                    <Border x:Name="ElementTopBorder" Height="1" HorizontalAlignment="Stretch" Grid.Row="0" Background="#FFF5F5F5"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <DevExpress_AgMenu_Internal:AgMenuItemContentPresenter x:Name="ElementContentPresenter" Grid.Column="0"
								  Foreground="{TemplateBinding Foreground}"
								  CheckAreaVisibility="{TemplateBinding CheckAreaVisibility}"
								  Header="{TemplateBinding Header}"
								  HeaderTemplate="{TemplateBinding HeaderTemplate}"
								  Icon="{TemplateBinding Icon}"
								  IsRadioItem="{TemplateBinding IsRadioItem}"
								  MenuOrientation="{TemplateBinding MenuOrientation}"
								  Padding="11,4,24,5"
								  Template="{StaticResource AgMenuItemVerticalContentPresenterTemplate}"
								  VerticalAlignment="Top"
								  ViewStyle="{TemplateBinding ViewStyle}"
								  Position="{TemplateBinding Position}"/>
                                        <DevExpress_AgMenu_DefaultStyle:AgMenuSubItemArrowDefaultStyleHelper Grid.Column="1" Margin="0,0,7,1">
                                            <DevExpress_AgMenu_DefaultStyle:AgMenuSubItemArrowDefaultStyleHelper.Background>
                                                <SolidColorBrush x:Name="ElementArrowBrush" Color="#FF505050"/>
                                            </DevExpress_AgMenu_DefaultStyle:AgMenuSubItemArrowDefaultStyleHelper.Background>
                                        </DevExpress_AgMenu_DefaultStyle:AgMenuSubItemArrowDefaultStyleHelper>
                                    </Grid>
                                    <Border Height="1" HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Bottom" Background="#FFC9C9C9"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </DevExpress_AgMenu:AgMenuTemplateListItem.Template>
            </DevExpress_AgMenu:AgMenuTemplateListItem>
            <DevExpress_AgMenu:AgMenuTemplateListItem Key="AgMenuItem;Vertical;PopupMenuItem">
                <DevExpress_AgMenu:AgMenuTemplateListItem.Template>
                    <ControlTemplate TargetType="DevExpress_AgMenu:AgMenuItem">
                        <Grid x:Name="ElementRoot">
                            <vsm:VisualStateManager.VisualStateGroups>
                                <vsm:VisualStateGroup x:Name="CommonStates">
                                    <vsm:VisualState x:Name="Normal"/>
                                    <vsm:VisualState x:Name="Hot">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#FFBDD9F8"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#FFD2E5FA"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="DroppedDown"/>
                                    <vsm:VisualState x:Name="DroppedDownSelected">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#FFBDD9F8"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#FFD2E5FA"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="Disabled">

                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#FF6FA2DD"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#FF8FB8E5"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                </vsm:VisualStateGroup>
                            </vsm:VisualStateManager.VisualStateGroups>
                            <Border HorizontalAlignment="Stretch" Margin="1,1,1,0" Width="Auto" CornerRadius="2,2,2,2">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop x:Name="ElementBackgroundGradient1" Color="Transparent"/>
                                        <GradientStop x:Name="ElementBackgroundGradient2" Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <Border HorizontalAlignment="Stretch" Margin="0,0,0,0" Width="Auto">
                                <DevExpress_AgMenu_Internal:AgMenuItemContentPresenter x:Name="ElementContentPresenter"
						  Foreground="{TemplateBinding Foreground}"
						  CheckAreaVisibility="{TemplateBinding CheckAreaVisibility}"
						  Header="{TemplateBinding Header}"
						  HeaderTemplate="{TemplateBinding HeaderTemplate}"
						  Icon="{TemplateBinding Icon}"
						  IsRadioItem="{TemplateBinding IsRadioItem}"
						  Margin="8,4,30,3"
						  MenuOrientation="{TemplateBinding MenuOrientation}"
						  Template="{StaticResource AgMenuItemVerticalPopupMenuItemContentPresenterTemplate}"
						  ViewStyle="{TemplateBinding ViewStyle}"
						  Position="{TemplateBinding Position}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </DevExpress_AgMenu:AgMenuTemplateListItem.Template>
            </DevExpress_AgMenu:AgMenuTemplateListItem>
            <DevExpress_AgMenu:AgMenuTemplateListItem Key="AgMenuItem;Vertical;PopupMenuSubItem">
                <DevExpress_AgMenu:AgMenuTemplateListItem.Template>
                    <ControlTemplate TargetType="DevExpress_AgMenu:AgMenuItem">
                        <Grid x:Name="ElementRoot">
                            <vsm:VisualStateManager.VisualStateGroups>
                                <vsm:VisualStateGroup x:Name="CommonStates">
                                    <vsm:VisualState x:Name="Normal"/>
                                    <vsm:VisualState x:Name="Hot">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#FFBDD9F8"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#FFD2E5FA"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="DroppedDown"/>
                                    <vsm:VisualState x:Name="DroppedDownSelected">
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="#FFBDD9F8"/>
                                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="#FFD2E5FA"/>
                                        </Storyboard>
                                    </vsm:VisualState>
                                    <vsm:VisualState x:Name="Disabled">

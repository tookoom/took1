}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.0/themes/smoothness/jquery-ui.css">
        @Styles.Render("~/Content/mapscss")
        @Scripts.Render("~/bundles/modernizr")
        

    </head>
    <body>
        <header>
            <div class="content-wrapper" style="text-align:right; font-size:small; font-style:normal; text-decoration:none;">
                @*<div class="float-right">*@
                    <nav>
                        <a id="hlinkEnglish">english</a>
                         | 
                        <a id="hlinkFrench">français</a>
                    </nav>
                @*</div>*@
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left block-info">
                    @*<h1>@customer.Name</h1>
                    <p>@customer.AddressList.FirstOrDefault().AddressInfo</p>
                    <p>@customer.PhoneList.FirstOrDefault().Number</p>*@
                </div>
                <div class="float-right">
                    <img src="~/Images/LogoTK1_Icon.png" />
                </div>
            </div>
                           

        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
                @Scripts.Render("~/bundles/mapscripts")
        @RenderSection("scripts", required: false)
        <script type="text/javascript">

            $(document).ready(function () {
                var url = window.location.href;
                if (url.search("/en/")>=0) {
                    $("#hlinkEnglish").css("font-weight", "Bold");
                    $("#hlinkFrench").css("font-weight", "Normal");
                }
                if (url.search("/fr/") >= 0) {
                    $("#hlinkEnglish").css("font-weight", "Normal");
                    $("#hlinkFrench").css("font-weight", "Bold");
                }
            });

            $("#hlinkEnglish").click(function (evt) {
                var url = window.location.href;
                if (url.search("/fr/") >= 0) {
                    url = url.replace("/fr/", "/en/");
                    window.location = url;
                }
            });
            $("#hlinkFrench").click(function (evt) {
                var url = window.location.href;
                if (url.search("/en/") >= 0) {
                    url = url.replace("/en/", "/fr/");
                    window.location = url;
                }
            });

        </script>
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-54165804-1', 'auto');
            ga('send', 'pageview');
        </script>
    </body>
</html>
